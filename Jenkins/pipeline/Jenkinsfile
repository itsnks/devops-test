pipeline{
    agent {
        label 'builtinnode'
    }
    stages{
        stage('Build Application'){
            steps{
                sh 'mvn -f Jenkins/java-tomcat-sample/pom.xml clean package'
            }
            post{
                success{
                    echo "Archiving the WAR file......"
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
        }
        stage('Staging Deployment'){
            steps{
                build job: 'tomcatdeploy'
            }
        }
    }
}